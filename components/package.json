{
  "name": "bonita-components",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.1",
  "devDependencies": {
    "lerna": "^3.18.3",
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "prettier": "1.16.4",
    "pretty-quick": "^1.10.0",
    "rollup": "^1.26.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0"
  },
  "scripts": {
    "start": "npm install && lerna run start --stream",
    "lint:check": "lerna run --parallel lint:check",
    "lint:format": "lerna run --parallel lint:format",
    "bundle": "npm install && lerna run --parallel bundle",
    "build": "npm install && lerna run build"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
